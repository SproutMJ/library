<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
    <link rel="stylesheet" href="/css/register.css">
</head>
<body>

        <div class="wrap">
            <div class="register-box">
                <form method="post" action="/login/register.do">
                    <fieldset>
                        <legend>회원가입</legend>
                        <table>
                            <tr>
                                <td><label for="id">아이디</label></td>
                                <td><input type="text" name="id" placeholder="아이디"></td>
                            </tr>
                            <tr>
                                <td><label for="password">비밀번호</label></td>
                                <td><input type="password" name="password" placeholder="비밀번호"></td>
                            </tr>
                            <tr>
                                <td><label for="password">비밀번호 확인</label></td>
                                <td><input type="text" name="password" placeholder="비밀번호 확인"></td>
                            </tr>
                            <tr>
                                <td><label for="last-name">이름</label></td>
                                <td><input type="text" name="last-name" placeholder="이름"></td>
                            </tr>
                            <tr>
                                <td><label for="first-name">성</label></td>
                                <td><input type="text" name="first-name" placeholder="성"></td>
                            </tr>
                        </table>
                    </fieldset>
                    <button type="submit" id="btn-register">회원가입</button>
                </form>
            </div>
        </div>
        <script src="/js/register.js"></script>
</body>
</html>